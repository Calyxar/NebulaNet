{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "framework": null,
  "regions": ["iad1"],
  "github": { "silent": true },

  "rewrites": [
    { "source": "/u/:path*", "destination": "/" },
    { "source": "/user/:path*", "destination": "/" },
    { "source": "/post/:path*", "destination": "/" },
    { "source": "/community/:path*", "destination": "/" },
    { "source": "/invite/:path*", "destination": "/" },
    { "source": "/auth/:path*", "destination": "/" },

    {
      "source": "/delete-account",
      "destination": "/delete-account/index.html"
    },
    { "source": "/child-safety", "destination": "/child-safety/index.html" },
    { "source": "/privacy", "destination": "/privacy/index.html" }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "origin-when-cross-origin" }
      ]
    }
  ]
}
